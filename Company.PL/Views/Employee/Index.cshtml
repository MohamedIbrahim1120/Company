@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-primary">All Employee</h1>

<br />
<br />

<a asp-action="Create" asp-controller="Employee" class="btn btn-outline-success px-4 fw-bold">
    <i class="bi bi-plus-circle"></i> Create Employee
</a>

<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead class="bg-secondary text-white">
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Salary</th>
                <th>IsActive</th>
                <th>IsDeleted</th>
                <th>@Html.DisplayNameFor(D => D.HiringDate)</th>
                <th>@Html.DisplayNameFor(D => D.CreateAt)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td>@item.Salary</td>
                    <td>@item.IsActive</td>
                    <td>@item.IsDeleted</td>
                    <td>@item.HiringDate</td>
                    <td>@item.CreateAt</td>
                    <td>
                        <partial name="_ButtonPartiaView" model="@item.Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-info">
        <h4>There are no Employees :(</h4>
    </div>
}
