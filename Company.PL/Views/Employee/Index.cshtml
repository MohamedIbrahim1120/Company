<h1 class="text-primary">All Employee</h1>

@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div id="alertMessage" class="m-3 alert alert-info">
        <p>@TempData["Message"]</p>
    </div>
}

