@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-primary">All Department</h1>

<br />
<br />

<a asp-action="Create" asp-controller="Department" class="btn btn-outline-success px-4 fw-bold">
    <i class="bi bi-plus-circle"></i> Create Department
</a>

<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead class="bg-secondary text-white">
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Date of Creation</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.CreateAt</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info text-white">
                            <i class="bi bi-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary text-white">
                            <i class="bi bi-pencil-square"></i> Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger text-white">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-info">
        <h4>There are no Departments :(</h4>
    </div>
}
