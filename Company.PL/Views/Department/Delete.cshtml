@model Department
@{
    ViewData["Title"] = "Delete";
}

<form asp-action="Delete">
<div class="card border-danger shadow-lg p-4">
    <h1 class="text-danger fw-bold text-center">
        <i class="bi bi-exclamation-triangle-fill"></i> Warning: Delete Department
    </h1>

    <p class="text-center text-danger fw-bold">
        Are you sure you want to delete this department? This action cannot be undone!
    </p>

    <hr class="border-danger" />

    <div class="row">
        <div class="col-md-4">
            <div class="border rounded p-3 bg-light">
                <label asp-for="Code" class="fw-bold text-danger"></label>
                <input asp-for="Code" class="form-control border-danger text-danger fw-bold bg-white" readonly />
            </div>
        </div>
        <div class="col-md-4">
            <div class="border rounded p-3 bg-light">
                <label asp-for="Name" class="fw-bold text-danger"></label>
                <input asp-for="Name" class="form-control border-danger text-danger fw-bold bg-white" readonly />
            </div>
        </div>
        <div class="col-md-4">
            <div class="border rounded p-3 bg-light">
                <label asp-for="CreateAt" class="fw-bold text-danger"></label>
                <input asp-for="CreateAt" class="form-control border-danger text-danger fw-bold bg-white" readonly />
            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        <form asp-action="Delete">
            <button type="submit" class="btn btn-danger fw-bold px-4 shadow">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow">
                <i class="bi bi-arrow-left"></i> Back To List
            </a>
        </form>
    </div>
</div>
</form>