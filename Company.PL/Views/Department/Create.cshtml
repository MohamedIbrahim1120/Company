@model CreateDtoDepartment

@{
    ViewData["Title"] = "Create";
}

<h1>Create Department</h1>
<br />

<form asp-action="Create">
    <div class="my-3">
        <label asp-for="Code" class="col-form-label"></label>
        <input asp-for="Code" class="form-control border-primary" />
        <span asp-validation-for="Code" class="text-danger fw-bold"></span>
    </div>
    <div class="my-3">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control border-primary" />
        <span asp-validation-for="Name" class="text-danger fw-bold"></span>
    </div>
    <div class="my-3">
        <label asp-for="CreateAt" class="col-form-label"></label>
        <input asp-for="CreateAt" class="form-control border-primary" />
        <span asp-validation-for="CreateAt" class="text-danger fw-bold"></span>
    </div>

    <div class="my-3">
        <input type="submit" value="Create" class="btn btn-success px-4" />
        <a asp-action="Index" class="btn btn-secondary px-4">Back To List</a>
    </div>
</form>
